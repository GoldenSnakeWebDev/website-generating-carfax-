<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap4.min.css">
    
    <link rel="stylesheet" href="/assets/css/styles.css" />
    
    <title>Logs</title>
  </head>
  <body>
    <%- include('../partials/header', {page: "logs"}) %>

    <style>
        .iconSettings, td.details-control:before, tr.shown td.details-control:before {
            margin-top: 5px;
            margin-bottom: 10px;
            font-size: 12px;
            position: relative;
            top: 1px;
            display: inline-block;
            font-family: "Glyphicons Halflings";
            font-style: normal;
            font-weight: 400;
            line-height: 1;
            -webkit-font-smoothing: antialiased;
        }

        td.details-control {
            cursor: pointer;
            text-align: center;
        }
        td.details-control:before {
            content: "\2b";
        }

        tr.shown td.details-control:before {
            content: "\2212";
        }
    </style>

    <div class="container">
        <div class="my-3 p-3 bg-white rounded box-shadow">
        <%- include('../partials/messages') %>
            <table id="logsTable" class="table table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th></th>
                        <th>Type</th>
                        <th>Status</th>
                        <th>Time</th>
                        <th>User</th>
                    </tr>
                    <tbody></tbody>
                </thead>
            </table>
        </div>
    </div>

    <%- include('../partials/footer') %>

    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js"></script>

    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"
      integrity="sha256-4iQZ6BVL4qNKlQ27TExEhBN1HFPvAvAMbFavKKosSWQ="
      crossorigin="anonymous"
    ></script>

    <script>
        let logs = <% if(typeof(logs) !== 'undefined' && logs.length > 0){ %> <%- JSON.stringify(logs) %>;  <% } else {%>[];<% } %>
    $(document).ready(function() {

        var table = $('#logsTable').DataTable({
            data: logs,
            order: [[ 4, "desc" ]],
            columns : [
                {
                    "className": 'details-control',
                    "orderable": false,
                    "data": null,
                    "defaultContent": ''
                },
                {
                    data : 'type',
                    render : function(data, type, row, meta) {
                        if (type === 'display' && data) {
                            data = data
                        }
                        else {
                            data = 'N/A'
                        }

                        return data;
                    }
                },
                {
                    data : 'status',
                    render : function(data, type, row, meta){
                        if (type === 'display' && data) {
                            let color = undefined;

                            switch (data) {
                                case "info":
                                    color = "#64b5f6";
                                    break;
                                case "success":
                                    color = "#69f0ae";
                                    break;
                                case "error":
                                    color = "#FF0000";
                                    break;
                            }
                            data = `<p style="color: ${color};">${data.charAt(0).toUpperCase() + data.slice(1)}</p>`;
                        }
                        return data;
                    }
                },
                {
                    data: 'createdAt',
                    type: 'date',
                    render : function(data, type, row, meta) {
                      if (type === 'display') {
                          if (data) {
                            data = moment(data).fromNow();
                          }
                          else {
                            data = 'N/A'
                          }
                        }
            
                        return data;
                    }
                },
                {
                    data : 'user',
                    render : function(data, type, row, meta){
                        if (type === 'display') {
                            if (data) {
                                data = '<a href="/admin/user/' + data.toUpperCase() + '">' + data + '</a>';
                            } else {
                                data = 'N/A'
                            }
                        }
                        return data;
                    }
                }
            ]
        }); 

        function format (d) {
            if (d.data) {
                return `
                    <pre class="prettyprint lang-javascript" style="border: none;padding: 15px;background: #efefef; white-space : pre-wrap;">${JSON.stringify(JSON.parse(d.data), null, 2)}</pre>
                `
            } else {
                return `
                    <pre class="prettyprint lang-javascript" style="border: none;padding: 15px;background: #efefef;">No additional data is available for this entry.</pre>
                `
            }
        }
        
        $('#logsTable tbody').on('click', 'td.details-control', function () {
            var tr  = $(this).closest('tr'),
                row = table.row(tr);
            
            if (row.child.isShown()) {
                tr.next('tr').removeClass('details-row');
                row.child.hide();
                tr.removeClass('shown');
            }
            else {
                row.child(format(row.data())).show();
                tr.next('tr').addClass('details-row');
                tr.addClass('shown');
            }
        });

    });
    </script>
  </body>
</html>
